<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="action"
            type="com.hwl.beta.ui.circle.action.ICircleUserItemListener" />
    </data>

    <LinearLayout
        android:id="@+id/rl_dgy_circle_create"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_circle_post_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="20px"
            android:text="2018年"
            android:textColor="#727270"
            android:textSize="40px"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="40px"
            android:paddingRight="40px">

            <LinearLayout
                android:id="@+id/ll_circle_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_circle_post_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11"
                    android:textColor="#727270"
                    android:textSize="38px" />

                <TextView
                    android:id="@+id/tv_circle_post_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01月"
                    android:textColor="#727270"
                    android:textSize="22px" />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_circle_post_img"
                android:layout_width="122px"
                android:layout_height="122px"
                android:layout_marginLeft="16px"
                android:layout_toRightOf="@+id/ll_circle_post_time"
                android:background="@drawable/circle_camera"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tv_circle_post_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16px"
                android:layout_toRightOf="@+id/iv_circle_post_img"
                android:text="拍一张照片\n开始记录你的生活"
                android:textColor="#727270"
                android:textSize="26px" />

        </RelativeLayout>

    </LinearLayout>
</layout>