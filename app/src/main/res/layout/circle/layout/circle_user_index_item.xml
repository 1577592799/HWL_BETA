<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="timeYear"
            type="String" />

        <variable
            name="timeMonth"
            type="String" />

        <variable
            name="timeDay"
            type="String" />

        <variable
            name="content"
            type="String" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_circle_post_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@{timeYear}"
            android:textColor="@color/main"
            android:textSize="15dp"
            android:visibility="@{android.text.TextUtils.isEmpty(timeYear)?android.view.View.GONE:android.view.View.VISIBLE}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/ll_circle_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/tv_circle_post_day"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{timeDay}"
                    android:textColor="@color/color_727270"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/tv_circle_post_month"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@{timeMonth}"
                    android:textColor="@color/color_727270"
                    android:textSize="13dp"
                    android:visibility="@{android.text.TextUtils.isEmpty(timeMonth)?android.view.View.INVISIBLE:android.view.View.VISIBLE}" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_circle_post_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ll_circle_post_time"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_circle_post_img_left"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_circle_post_img_lefttop"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:scaleType="centerCrop" />

                    <View
                        android:id="@+id/view_left_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="2px" />

                    <ImageView
                        android:id="@+id/iv_circle_post_img_leftbottom"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:scaleType="centerCrop" />

                </LinearLayout>

                <View
                    android:layout_width="2px"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/ll_circle_post_img_right"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_circle_post_img_righttop"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:scaleType="centerCrop" />

                    <View
                        android:id="@+id/view_right_split_line"
                        android:layout_width="match_parent"
                        android:layout_height="2px" />

                    <ImageView
                        android:id="@+id/iv_circle_post_img_rightbottom"
                        android:layout_width="match_parent"
                        android:layout_height="0px"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:scaleType="centerCrop" />

                </LinearLayout>

            </LinearLayout>

            <com.hwl.beta.emotion.widget.EmotionTextView
                android:id="@+id/tv_circle_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ll_circle_post_img"
                android:text="@{content}"
                android:textColor="@color/color_727270"
                android:textSize="15dp" />

        </RelativeLayout>

    </LinearLayout>
</layout>