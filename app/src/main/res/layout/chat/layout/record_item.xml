<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="position"
            type="int"></variable>

        <variable
            name="record"
            type="com.hwl.beta.db.entity.ChatRecordMessage"></variable>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <com.hwl.beta.ui.chat.synthesizer.SynthesizedImageView
            android:id="@+id/iv_group_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/empty_photo"
            android:visibility="gone"
            app:synthesized_default_image="@drawable/empty_photo"
            app:synthesized_image_bg="@color/color_b2b2b2"
            app:synthesized_image_gap="2dp"
            app:synthesized_image_size="50dp" />

        <ImageView
            android:id="@+id/iv_record_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/empty_photo"
            android:visibility="visible" />

        <com.hwl.beta.ui.widget.TipNumberView
            android:id="@+id/tnv_msg_count"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="-3dp"
            android:gravity="center"
            android:text='@{record.unreadCount+""}'
            android:textColor="@color/white"
            android:textSize="@dimen/dp_8"
            android:visibility="@{record.unreadCount>0?android.view.View.VISIBLE:android.view.View.GONE}" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text='@{record.title}'
                android:textColor="@color/color_424242"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@{record.content}"
                android:textColor="@color/color_b2b2b2"
                android:textSize="@dimen/dp_12" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="@{com.hwl.beta.utils.DateUtils.dateToStrLong2(record.sendTime)}"
            android:textColor="@color/color_b2b2b2"
            android:textSize="@dimen/dp_12" />
    </LinearLayout>

</layout>