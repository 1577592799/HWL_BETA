<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="bean"
            type="com.hwl.beta.ui.imgselect.bean.ImageSelectBean"></variable>

        <variable
            name="action"
            type="com.hwl.beta.ui.imgselect.action.IImageSelectListener"></variable>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.hwl.beta.ui.widget.TitleBar
            android:id="@+id/tb_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_image_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tb_title" />

        <LinearLayout
            android:id="@+id/ll_image_dirs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:alpha="0.5"
            android:background="#000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_image_dir"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:onClick="@{view->action.onDirNameClick(bean.dirFullName)}"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text='@{bean.dirName??"全部图片"}'
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_image_dir_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{bean.dirFullName}"
                android:textColor="#ffffff"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_image_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="@{bean.imageCount}"
                android:textColor="#ffffff" />
        </LinearLayout>

    </RelativeLayout>
</layout>